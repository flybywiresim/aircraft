		<EVENT_NAME>A320_Neo_FDW_BTN_#SIDE#_#BASE_NAME#</EVENT_NAME>
		<GROUP_STATE_VAR_NAME>XMLVAR_RMP_#SIDE#_GROUP_#GROUP_NAME#_IS_DISABLED</GROUP_STATE_VAR_NAME>
		<CURRENT_BUTTON_VAR_NAME>XMLVAR_RMP_#SIDE#_CURRENT_BUTTON_IN_GROUP_#GROUP_NAME#</CURRENT_BUTTON_VAR_NAME>
		<OPTIONAL_ACTIVE_IF>1</OPTIONAL_ACTIVE_IF>
		<RUN_ON_PRESS></RUN_ON_PRESS>
		<WWISE_EVENT_1>radio_push_button_on</WWISE_EVENT_1>
		<NORMALIZED_TIME_1>0.1</NORMALIZED_TIME_1>
		<WWISE_EVENT_2>radio_push_button_off</WWISE_EVENT_2>
		<NORMALIZED_TIME_2>0.5</NORMALIZED_TIME_2>
		<TOOLTIPID>TT:COCKPIT.TOOLTIPS.RADIO_SELECT_#BASE_NAME#</TOOLTIPID>
	</DefaultTemplateParameters>
	
	<Component ID="#NODE_ID#" Node="#NODE_ID#">
		<UseTemplate Name="ASOBO_GT_Push_Button">
			<ANIM_NAME>#ANIM_NAME_BUTTON#</ANIM_NAME>
			<LEFT_SINGLE_CODE>
				<!--Only respond when power is on AND the group isn't disabled AND the optional requirement is valid-->
				(L:XMLVAR_RMP_#SIDE#_On) if{
					(L:#GROUP_STATE_VAR_NAME#) ! if{
						#OPTIONAL_ACTIVE_IF# if{
							(&gt;H:#EVENT_NAME#) #GROUP_INDEX# (&gt;L:#CURRENT_BUTTON_VAR_NAME#)
							#RUN_ON_PRESS#
						}
					}
				}
			</LEFT_SINGLE_CODE>
		</UseTemplate>
	</Component>
	
	<Component ID="#LED_NODE_ID#" Node="#LED_NODE_ID#">
		<UseTemplate Name="ASOBO_GT_Emissive_Gauge">
			<EMISSIVE_CODE>
				(L:XMLVAR_RMP_#SIDE#_On, bool) (L:#GROUP_STATE_VAR_NAME#) ! and if{
					(L:#CURRENT_BUTTON_VAR_NAME#) #GROUP_INDEX# == #OPTIONAL_ACTIVE_IF# and
				}
				els{
					0
				}
			</EMISSIVE_CODE>
		</UseTemplate>
	</Component>
</Template>

