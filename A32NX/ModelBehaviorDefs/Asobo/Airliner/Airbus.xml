<Template Name="ASOBO_RMP_DISPLAY_Template">
	<DefaultTemplateParameters>
		<SIDE>UNKNOWN</SIDE>
	</DefaultTemplateParameters>
	
	<Component ID="RMP_SWITCH_#SIDE#" Node="SWITCH_RADIO#SIDE#_1">
		<UseTemplate Name="ASOBO_GT_Switch_Code">
			<ANIM_NAME>SWITCH_RADIO#SIDE#_1</ANIM_NAME>
			<ANIM_LENGTH>100</ANIM_LENGTH>
			<ANIM_CODE>(L:XMLVAR_RMP_#SIDE#_On) 100 *</ANIM_CODE>
			<LEFT_SINGLE_CODE>
				(L:XMLVAR_RMP_#SIDE#_On) ! (&gt;L:XMLVAR_RMP_#SIDE#_On)
				(L:XMLVAR_RMP_#SIDE#_On) if{
					0 (&gt;L:XMLVAR_RMP_#SIDE#_GROUP_FREQ_IS_DISABLED)			(* FREQ group enabled *)
					1 (&gt;L:XMLVAR_RMP_#SIDE#_GROUP_MODE_IS_DISABLED)			(* MODE group disabled *)
					1 (&gt;L:XMLVAR_RMP_#SIDE#_CURRENT_BUTTON_IN_GROUP_FREQ)	(* Default FREQ group is button 1 (VHF1) *)
					0 (&gt;L:XMLVAR_RMP_#SIDE#_CURRENT_BUTTON_IN_GROUP_MODE)	(* Default MODE group is button 0 (NONE) *)
					0 (&gt;L:XMLVAR_RMP_#SIDE#_AM_Active)						(* AM button off *)
					0 (&gt;L:XMLVAR_RMP_#SIDE#_NAV_Active)						(* NAV button off *)
					0 (&gt;L:XMLVAR_RMP_#SIDE#_BFO_Active)						(* BFO button off *)
				}
				(&gt;H:A320_Neo_FDW_SWITCH_#SIDE#_TOGGLE)
			</LEFT_SINGLE_CODE>
			<WWISE_EVENT_1>radio_switch_on</WWISE_EVENT_1>
			<NORMALIZED_TIME_1>0.1</NORMALIZED_TIME_1>
			<WWISE_EVENT_2>radio_switch_off</WWISE_EVENT_2>
			<NORMALIZED_TIME_2>0.5</NORMALIZED_TIME_2>
			<ANIMTIP_0>TT:COCKPIT.TOOLTIPS.RADIO_SELECT_TURN_RMP_ON</ANIMTIP_0>
			<ANIMTIP_1>TT:COCKPIT.TOOLTIPS.RADIO_SELECT_TURN_RMP_OFF</ANIMTIP_1>
		</UseTemplate>
		
		<UseTemplate Name="ASOBO_GT_Update">
			<FREQUENCY>1</FREQUENCY>
			<UPDATE_CODE>
				(L:XMLVAR_RMP_#SIDE#_INIT) ! if{
					1 (&gt;L:XMLVAR_RMP_#SIDE#_On)								(* Start with the switch on *)
					1 (&gt;L:XMLVAR_RMP_#SIDE#_GROUP_MODE_IS_DISABLED)			(* MODE group disabled *)
					1 (&gt;L:XMLVAR_RMP_#SIDE#_CURRENT_BUTTON_IN_GROUP_FREQ)	(* Default FREQ group is button 1 (VHF1) *)
					(&gt;H:A320_Neo_FDW_SWITCH_#SIDE#_TOGGLE)
					1 (&gt;L:XMLVAR_RMP_#SIDE#_INIT)							(* INIT complete *)
				}
			</UPDATE_CODE>
		</UseTemplate>
	</Component>
	
	<Component ID="RMP_DIAL_LARGE_#SIDE#" Node="KNOB_RADIO#SIDE#_BIG">
		<UseTemplate Name="ASOBO_GT_Knob_Infinite">
			<ANIM_NAME>KNOB_RADIO#SIDE#_BIG</ANIM_NAME>
			<CLOCKWISE_CODE>(&gt;H:A320_Neo_FDW_DIAL_#SIDE#_INTEGER_INC)</CLOCKWISE_CODE>
			<ANTICLOCKWISE_CODE>(&gt;H:A320_Neo_FDW_DIAL_#SIDE#_INTEGER_DEC)</ANTICLOCKWISE_CODE>
			<WWISE_EVENT>radio_big_knob</WWISE_EVENT>
			<COUNT>36</COUNT>
			<ANIMREF_ID>0</ANIMREF_ID>
			<ANIMCURSOR_MIN>-1</ANIMCURSOR_MIN>
			<ANIMCURSOR_MAX>-1</ANIMCURSOR_MAX>
			<ANIMTIP_0_ON_CURSOR>TurnLeft</ANIMTIP_0_ON_CURSOR>
			<ANIMTIP_1_ON_CURSOR>TurnRight</ANIMTIP_1_ON_CURSOR>
			<ANIMTIP_0>TT:COCKPIT.TOOLTIPS.RADIO_TUNE_SBY_FREQUENCY_DEC</ANIMTIP_0>
			<ANIMTIP_1>TT:COCKPIT.TOOLTIPS.RADIO_TUNE_SBY_FREQUENCY_INC</ANIMTIP_1>
		</UseTemplate>
	</Component>
	
	<Component ID="RMP_DIAL_SMALL_#SIDE#" Node="KNOB_RADIO#SIDE#_SMALL">
