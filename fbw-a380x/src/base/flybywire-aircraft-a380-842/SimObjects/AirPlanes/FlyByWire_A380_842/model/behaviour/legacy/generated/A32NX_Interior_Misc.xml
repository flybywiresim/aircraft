#GNDCTL_PERMISSIVES# sp0
(L:A32NX_RCDR_GROUND_CONTROL_ON, bool) (&gt;O:GroundCtlWasOn, bool)
(O:GroundCtlWasOn, bool) ! l0 and if{
  1 (&gt;L:A32NX_RCDR_GROUND_CONTROL_ON, bool)
}
            </LEFT_SINGLE_CODE>
            <LEFT_LEAVE_CODE>
(O:GroundCtlWasOn, bool) if{
