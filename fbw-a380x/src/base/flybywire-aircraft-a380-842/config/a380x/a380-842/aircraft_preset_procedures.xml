        <!-- SOP: TAKEOFF -->
        <Step Name="NOSE Lt Takeoff" Type="STEP" Delay="1000">
            <Condition>(A:LIGHT LANDING:1, Number) 1 ==</Condition>
            <Action>1 (&gt;K:LANDING_LIGHTS_ON)</Action>
